{
  "name": "@coligo-lms/mathquill-tabs",
  "version": "2.3.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "lint.js": "eslint --ext js .",
    "demo.vanillajs": "shx cp index.{html,js,css} mathquill4quill.{js,css} demo",
    "demo.reactjs": "npm --prefix=reactjs run build",
    "postdemo.reactjs": "shx mv reactjs/build demo/reactjs",
    "predemo": "shx mkdir -p demo",
    "demo": "run-s demo.vanillajs demo.reactjs",
    "prebuild": "shx mkdir -p build",
    "build.babel": "babel src/mathquill4quill.js > build/mathquill4quill.js",
    "build.uglify": "uglifyjs --compress --mangle -- build/mathquill4quill.js > build/mathquill4quill.min.js",
    "build.csso": "csso --input src/mathquill4quill.css --output build/mathquill4quill.min.css",
    "build": "run-s build.babel build.uglify build.csso",
    "postbuild": "shx rm build/mathquill4quill.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "concurrently": "^4.1.1",
    "csso-cli": "^3.0.0",
    "eslint": "^7.11.0",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "uglify-js": "^3.6.0",
    "jquery": "^3.4.1",
    "katex": "^0.13.0",
    "mathquill": "^0.10.1",
    "react": "v16.13.0",
    "react-dom": "v16.13.0",
    "react-quill": "^1.3.5",
    "react-scripts": "4.0.3"
  },
  "main": "src/mathquill4quill.js",
  "files": [
    "build/mathquill4quill.min.css",
    "build/mathquill4quill.min.js",
    "src/mathquill4quill.css",
    "src/mathquill4quill.js"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
