{
  "name": "@coligo-lms/mathquill-tabs",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "build:js": "babel src/mathquill4quill.js src/operators.js -d dist",
    "build:css": "shx cp src/mathquill4quill.css dist/mathquill4quill.css",
    "prebuild": "shx mkdir -p dist",
    "transpile": "run-s prebuild build:js build:css",
    "transpile:watch": "nodemon",
    "clean": "rm -rf node_modules && rm -rf dist",
    "lint": "eslint --ext .js --ext .jsx src/",
    "lint:fix": "eslint --fix --ext .js --ext .jsx src/"
  },
  "lint-staged": {
    "*.js": [
      "prettier -w",
      "eslint"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "concurrently": "^4.1.1",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "nodemon": "^2.0.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-lerna": "^1.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "lint-staged": "^9.2.5",
    "prettier": "^2.2.1"
  },
  "main": "dist/mathquill4quill.js",
  "files": [
    "dist"
  ]
}
